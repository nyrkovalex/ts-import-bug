{
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,
        "strictNullChecks": true,
        "module": "commonjs",
        "target": "es5",
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "noImplicitAny": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "strictPropertyInitialization": true,
        "lib": [
            "dom",
            "es2017"
        ]
    },
    "include": [
        "./src"
    ]
}